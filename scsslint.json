{
  "extends": "stylelint-config-recommended",
  "rules": {
    "string-quotes": "single",
    "unit-no-unknown": [ true, {
      "ignoreUnits": [
        "x"
      ]
    }],
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "extend",
        "include",
        "function",
        "if",
        "mixin",
        "return",
        "each",
        "else",
        "content"
      ]
    }]
  }
}
